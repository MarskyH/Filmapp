<?xml version="1.0" encoding="utf-8"?>

<!--    app:cardBackgroundColor="#00FFFFFF"-->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#00FFFFFF"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_mediaImage_acompanhandoItem"
                android:layout_width="@dimen/poster_largura"
                android:layout_height="@dimen/poster_altura"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/flash_image01" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mediaName_acompanhandoItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nameMedia_maxDeight"
                android:fontFamily="@font/montserrat"
                android:autoSizeTextType="uniform"
                android:lines="1"
                android:text="The Flash"
                android:textColor="@color/Principal"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/textView_info_acompanhando"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_serieEpisode_acompanhandoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="2x08 - O Que Eu Sei"
                android:lines="1"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_serieProgress_acompanhandoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/montserrat"
                android:text="84%"
                android:textColor="@color/Principal"
                android:textSize="13dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar_serieProgress_acompanhandoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressBackgroundTint="@color/white"
                android:progress="84"
                android:progressTint="@color/Principal"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>