<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.descubra.FragRecycler_filmesDescubra">

    <TextView
        android:id="@+id/tv_titleAssistirMaisTarde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/textView_assistirMaisTarde_agenda"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_assistirMaisTarde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_titleAssistirMaisTarde"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_poster" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/pb_assistirMaisTarde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_titleAssistirMaisTarde"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:indeterminate="true"
        android:visibility="visible" />

</RelativeLayout>