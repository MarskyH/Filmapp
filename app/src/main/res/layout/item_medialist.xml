<?xml version="1.0" encoding="utf-8"?>

<!--Item usado para todos os Recyclers do "Descubra" e "Melhores"-->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#00FFFFFF"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_mediaImage_medialist"
                android:layout_width="@dimen/poster_largura"
                android:layout_height="@dimen/poster_altura"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/flash_image01" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mediaName_medialist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nameMedia_maxDeight"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/montserrat"
                android:text="The Flash"
                android:textColor="@color/Principal"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingsBar_mediaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:scaleY=".8"
                    android:layout_gravity="left"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="2.5"
                    android:progressTint="@color/GoldenStar"
                    android:progressBackgroundTint="@color/Grey"
                    android:secondaryProgressTint="@color/GoldenStar"/>


            </LinearLayout>

<!--            Serie:  mediaDetail1 = First Air Date-->
<!--                    mediaDetail2 = Linguagem Original-->

<!--            Filme:  mediaDetail1 = Data de Lançamento-->
<!--                    mediaDetail2 = Linguagem Original-->

            <TextView
                android:id="@+id/tv_mediaDetail1_medialist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                android:text="2 Temporadas"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mediaDetail2_medialist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="16 Episódios"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/assistirMaisTardeIndication_medialist"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_assistir_mais_tarde"/>

                <ImageView
                    android:id="@+id/evaluationIndication_medialist"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_estrela_vazia"/>

                <ImageView
                    android:id="@+id/shareIndication_medialist"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_compartilhar"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>